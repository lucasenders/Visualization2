{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "background": "rgb(240, 240, 240)",
  "data": {"url": "https://raw.githubusercontent.com/lucasenders/Visualization2/refs/heads/main/data/aus_emissions.csv"},
  "layer": [
    {
      "mark": "area",
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "title": "",
          "axis": {
            "format": "%Y"
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "emissions",
          "title": "CO2 Emissions in Megatonnes (Mt)",
          "axis": {"titleFontSize": 12}
        },
        "color": {
          "field": "emissions_type",
          "title": "Source",
          "scale": {
            "domain": [
              "Cement",
              "Coal",
              "Flaring",
              "Gas",
              "Oil",
              "Other"
            ],
            "range": [
              "#4f6980",
              "#849db1",
              "#a2ceaa",
              "#638b66",
              "#bfbb60",
              "#fbb04e"
            ]
          },
          "legend": {"orient": "top-left",
        "offset": 9}
        
        },
        "tooltip": [
          {"field": "emissions_type", "title": "Source"},
          {"field": "year", "title": "Year", "type": "temporal", "timeUnit": "year", "format": "%Y"},
          {"aggregate": "sum", "field": "emissions", "title": "CO2 Emissions (Mt)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "dx": -170,
        "dy": -28,
        "baseline": "middle",
        "fontStyle": "italic",
        "size": 13
      },
      "encoding": {
        "text": {
          "value": ["Emissions Surged 627%", " From 1950 to 2010"]
        },
        "x": {
          "aggregate": "max",
          "field": "year",
          "axis": null
        },
        "y": {
          "aggregate": "max",
          "field": "emissions"
        }
      }
    },
    {"mark": {
      "type": "text",
      "align": "center",
      "dx": -226,
      "dy": 22,
      "baseline": "middle",
      "fontStyle": "italic",
      "size": 13
    },
    "encoding": {
      "text": {
        "value": ["Emissions Remain Fairly Stagnant", "Throughout 1900 to 1940"]
      },
      "x": {
        "aggregate": "max",
        "field": "year",
        "axis": null
      },
      "y": {
        "aggregate": "max",
        "field": "emissions"
      }
    }},
    {"mark": {
      "type": "text",
      "align": "center",
      "dx": -154,
      "dy": -76,
      "baseline": "middle",
      "fontStyle": "italic",
      "size": 13
    },
    "encoding": {
      "text": {
        "value": ["Emissions Halt From About 2010 as", "Climate Action Starts to Take Place"]
      },
      "x": {
        "aggregate": "max",
        "field": "year",
        "axis": null
      },
      "y": {
        "aggregate": "max",
        "field": "emissions"
      }
    }}
  ]
}