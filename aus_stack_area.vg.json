{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "background": "rgb(240, 240, 240)",
  "data": {"url": "https://raw.githubusercontent.com/lucasenders/Visualization2/refs/heads/main/data/aus_emissions.csv"},
  "layer": [
    {
      "mark": "area",
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "title": "",
          "axis": {
            "format": "%Y"
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "emissions",
          "title": "CO2 Emissions in Megatonnes (Mt)"
        },
        "color": {
          "field": "emissions_type",
          "title": "Source",
          "scale": {
            "domain": [
              "Cement",
              "Coal",
              "Flaring",
              "Gas",
              "Oil",
              "Other"
            ],
            "range": [
              "#4f6980",
              "#849db1",
              "#a2ceaa",
              "#638b66",
              "#bfbb60",
              "#fbb04e"
            ]
          },
          "legend": {"orient": "top-left",
        "offset": 9}
        
        },
        "tooltip": [
          {"field": "emissions_type", "title": "Source"},
          {"field": "year", "title": "Year", "type": "temporal", "timeUnit": "year", "format": "%Y"},
          {"aggregate": "sum", "field": "emissions", "title": "CO2 Emissions (Mt)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "dx": -180,
        "dy": -25,
        "baseline": "middle",
        "fontStyle": "italic",
        "size": 12
      },
      "encoding": {
        "text": {
          "value": ["Australia's Emissions Surged", "627% from 1950 to 2010"]
        },
        "x": {
          "aggregate": "max",
          "field": "year",
          "axis": null
        },
        "y": {
          "aggregate": "max",
          "field": "emissions"
        }
      }
    }
  ]
}