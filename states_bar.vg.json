{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "data": {"url": "https://raw.githubusercontent.com/lucasenders/Visualization2/refs/heads/main/data/states_emissions_normalised.csv"},
    "width": "container",
    "height": "container",
    "background": "rgb(240, 240, 240)",
    "params": [
        {
            "name": "year_selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 1990,
                "max": 2022,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year == year_selection"
        }
    ],
    "layer": [
        {
            "mark": {"type":"bar", "fill": "skyblue"},
            "encoding": {
                "x": {
                    "field": "Emissions_Per_Capita",
                    "type": "quantitative",
                    "scale": {"domain": [-20, 80]},
                    "title": "Net CO2 Emissions in tonnes (t) Per Person",
                    "axis": {"titleFontSize": 12}
                },
                "y": {
                    "field": "State", 
                    "type": "nominal",
                    "sort": "x",
                    "title":""
                },
                "tooltip": [
                  {"field": "State", "title": "State"},
                  {"field": "Year", "title": "Year"},
                {"field": "Emissions_Per_Capita", "format": ".3f", "title" : "CO2 Emissions"}]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 3
            },
            "encoding": {
                "text": {
                    "field": "Emissions_Per_Capita",
                    "type": "quantitative",
                    "format": ".3f"
                },
                "x": {
                    "field": "Emissions_Per_Capita",
                    "type": "quantitative",
                    "scale": {"domain": [-20, 150]}
                },
                "y": {
                    "field": "State", 
                    "type": "nominal",
                    "sort": "x"
                },
                "tooltip": [
                  {"field": "State", "title": "State"},
                  {"field": "Year", "title": "Year"},
                {"field": "Emissions_Per_Capita", "format": ".3f", "title" : "CO2 Emissions"}]
            }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle",
            "fontStyle": "italic",
            "size": 13
          },
          "transform": [
            {
              "filter": "datum.State == 'Tasmania'"
            }
          ],
          "encoding": {
            "x": {
              "value": 225
            },
            "y": {
              "value": 112 
            },
            "text": {
              "value": ["Tasmania Has Been", "Below Net Zero", "Since 2014"]
            }
          }
        }
    ]
    
}