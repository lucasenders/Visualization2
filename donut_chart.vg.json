{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/lucasenders/Visualization2/refs/heads/main/data/region_emissions.csv"},
  "width": "container",
  "height": "container",
  "background": "rgb(240, 240, 240)",
  "params": [
    {
      "name": "year_selection",
      "value": 2022,
      "bind": {
          "input": "range",
          "min": 1900,
          "max": 2022,
          "step": 1,
          "name": "Select Year: "
      }
  },
  {
    "name": "region_selection",
    "value": "Oceania",
    "bind": {
      "input": "select",
      "options": [
        "Africa", 
        "Asia", 
        "Europe (excl. EU-27)", 
        "European Union (27)", 
        "North America", 
        "Oceania", 
        "South America"
      ],
      "name": "Select Region: "
    }
  }
  ],
  "transform": [
    {
      "filter": "datum.country == region_selection"
    },
    {"filter": "datum['year'] == year_selection"}
  ],
  "mark": {"type": "arc", "innerRadius": 40},
  "encoding": {
    "theta": {"field": "total_emissions", "type": "quantitative"},
    "color": {
      "field": "emissions_type",
      "type": "nominal",
      "scale": {
        "domain": [
          "Cement",
          "Coal",
          "Flaring",
          "Gas",
          "Oil",
          "Other"
        ],
        "range": [
          "#4f6980",
          "#849db1",
          "#a2ceaa",
          "#638b66",
          "#bfbb60",
          "#fbb04e"
        ]
      },
      "title": "Source",
          "legend": {"orient": "bottom-right",
        "offset": 50}
    },
    "tooltip": [
      {"field": "emissions_type", "title": "Source"},
      {"field": "total_emissions", "title": "COâ‚‚ Emissions (Mt)", "format": ",.3f"},
      {"field": "proportion", "title": "Proportion", "format": ".2%"}
      
    ]
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}