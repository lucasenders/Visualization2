{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/lucasenders/Visualization2/refs/heads/main/data/continent_emissions.csv"},
  "width": "container", 
  "height": "container",
  "background": "rgb(240, 240, 240)",
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "year", 
      "field": "Year",
      "axis": {"domain": false, "format": "%Y"}, 
      "title": ""
    },
    "y": {
      "aggregate": "sum", 
      "field": "Emissions_CO2",
      "stack": "normalize",
      "title": "Proportion of CO2 Emissions",
      "axis": {
        "format": ".0%",
        "title": "Proportion of CO2 Emissions" 
      }
    },
"color": {
          "field": "Continent",
          "title": "Continent",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#8074a8",
              "#c6c1f0",
              "#c46487",
              "#ffbed1",
              "#9c9290",
              "#c5bfbe"
            ]
          },
          "legend": {"orient": "right",
        "offset": 7}
    },
    "tooltip": [
      {"field": "Continent", "title": "Continent"},
      {"field": "Year", "type": "temporal", "format": "%Y", "title": "Year"},
      {"field": "Proportion", "format": ".2%"}
    ]
  }
}